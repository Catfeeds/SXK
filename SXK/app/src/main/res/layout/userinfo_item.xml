<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/ripple_bg"
    android:orientation="vertical">
    <!--<TextView-->
    <!--android:id="@+id/line_dc_view"-->
    <!--android:visibility="gone"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="15dp"-->
    <!--android:background="@color/grrray"/>-->
    <RelativeLayout
        android:id="@+id/content_layout"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:background="@drawable/ripple_bg">

        <TextView
            android:id="@+id/user_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text=""
            android:layout_marginLeft="25dp"
            android:gravity="center_horizontal|center_vertical"
            android:textColor="@color/navi_title_color"
            android:textSize="13sp" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_horizontal|center_vertical"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true">
            <TextView
                android:id="@+id/user_text"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="20dp"
                android:text=""
                android:gravity="center_horizontal|center_vertical"
                android:textColor="@color/login_phone_numbercolor"
                android:textSize="13sp" />

            <ImageView
                android:id="@+id/go"
                android:layout_width="8dp"
                android:layout_height="13dp"
                android:layout_marginRight="12dp"
                android:background="@drawable/publish_publish_go"
                />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="51.5dp"
            android:background="@color/login_line_color"/>
    </RelativeLayout>

</LinearLayout>
