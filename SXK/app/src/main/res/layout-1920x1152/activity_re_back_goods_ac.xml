<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_re_back_goods_ac"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp">
        <include layout="@layout/nav_title_no_line"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:background="@color/gray_40"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:overScrollMode="never">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="50dp">
            <LinearLayout
                android:id="@+id/reback_add_pic_lay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">
                <com.example.cfwifine.sxk.Section.PublishNC.View.PreviewPicView.FourGridlayout
                    android:id="@+id/results"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </com.example.cfwifine.sxk.Section.PublishNC.View.PreviewPicView.FourGridlayout>
                <ImageView
                    android:id="@+id/reback_add_pic_imageview"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginRight="12dp"
                    android:background="@drawable/publish_publish_addpic" />
                <ImageView
                    android:id="@+id/reback_howto_pic_imageview"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginRight="12dp"
                    android:background="@drawable/publish_publish_howtophoto" />

                <ImageView
                    android:id="@+id/reback_max_nine_pic"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginRight="12dp"
                    android:background="@drawable/publish_must_nine" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <EditText
                    android:id="@+id/reback_ordernumber_edt"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="45dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/table_shape_gray_line"
                    android:textSize="14sp"
                    android:digits="0123456789abcdefghigklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
                    android:textColor="@color/black"
                    android:hint="  请输入单号"
                    android:textColorHint="@color/grrray" />
                <EditText
                    android:id="@+id/reback_comment_edt"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/table_shape_gray_line"
                    android:textSize="14sp"
                    android:inputType="text"
                    android:cursorVisible="true"
                    android:textCursorDrawable="@null"
                    android:singleLine="false"
                    android:minLines="4"
                    android:maxLines="5"
                    android:textColor="@color/black"
                    android:hint="  请输入评价"
                    android:textColorHint="@color/grrray"
                    android:gravity="top"
                    android:paddingTop="8dp"/>
                <Button
                    android:id="@+id/reback_confirm_btn"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:layout_marginTop="150dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginBottom="40dp"
                    android:text="确认寄回"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:background="@drawable/table_shape_login_button"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>



</LinearLayout>
