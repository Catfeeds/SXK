<?xml version="1.0" encoding="utf-8"?>
<com.example.cfwifine.sxk.Section.MineNC.Controller.MineFollow.SlidingView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/ripple_bg"
    android:layout_marginBottom="1dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/tv_delete"
            android:layout_height="match_parent"
            android:layout_width="80dp"
            android:gravity="center"
            android:layout_toRightOf="@+id/layout_content"
            android:text="取消关注"
            android:background="@drawable/btn_click_red_havebackground"
            android:textColor="#DDFFFFFF"
            />
        <RelativeLayout
            android:id="@+id/layout_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:id="@+id/slide_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:background="@drawable/btn_click_black_havebackground"
                android:orientation="horizontal">
                <com.example.cfwifine.sxk.View.CircleImageView
                    android:id="@+id/headportrait"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/user_header_image_placeholder"
                    app:border_color="@color/lightgray"
                    app:border_width="0.1dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"/>
                <TextView
                    android:id="@+id/text"
                    android:layout_height="match_parent"
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:gravity="center_vertical"
                    android:text=""
                    android:textSize="14sp"
                    android:textColor="#DD000000" />
                <TextView
                    android:id="@+id/texts"
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:gravity="center_vertical|end"
                    android:layout_marginRight="15dp"
                    android:textAlignment="textEnd"
                    android:layout_gravity="end|center_vertical"
                    android:textSize="12sp"
                    android:text=""
                    android:textColor="@color/gray_40" />

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:layout_marginLeft="20dp"
                android:layout_alignParentBottom="true"
                android:background="@color/gray_40"/>
        </RelativeLayout>

    </RelativeLayout>
</com.example.cfwifine.sxk.Section.MineNC.Controller.MineFollow.SlidingView>
