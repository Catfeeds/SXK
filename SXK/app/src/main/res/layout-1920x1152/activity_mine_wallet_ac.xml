            <!--android:layout_height="wrap_content"-->
            <!--android:text="@string/card_string"/>-->

            <!--</LinearLayout>-->

            <!--</android.support.v7.widget.CardView>-->
        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

