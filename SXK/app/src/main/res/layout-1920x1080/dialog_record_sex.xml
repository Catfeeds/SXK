<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/alp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="19dp"
                    android:text="修改性别"
                    android:textSize="14sp"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/navi_title_color"
                    android:id="@+id/title1" />
                <Button
                    android:id="@+id/imagbtn"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_marginRight="15dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="19dp"
                    android:background="@drawable/dialog_closer" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="14dp"
                android:background="@android:color/darker_gray"/>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="30dp"
                android:orientation="horizontal">
                <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:orientation="horizontal">
                    <RadioButton
                        android:id="@+id/man_btn"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:button="@null"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:background="@drawable/radiobutton_bg"
                        android:checked="false"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="男"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:padding="5dp"/>
                    <ImageView
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:layout_marginRight="30dp"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:background="@drawable/sex_boy"/>

                    <RadioButton
                        android:id="@+id/wuman_btn"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:button="@null"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:background="@drawable/radiobutton_bg"
                        android:paddingLeft="10dp"
                        android:layout_marginLeft="20dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="女"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:padding="5dp"/>
                    <ImageView
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:background="@drawable/sex_girl"/>

                </RadioGroup>
            </RelativeLayout>
        </LinearLayout>


</RelativeLayout>