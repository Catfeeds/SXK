<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_mine_rent_part_ac"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.example.cfwifine.sxk.Section.MineNC.Controller.RentAndSale.Controller.MineRentPartAC">
    <include layout="@layout/nav_title_no_line"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:background="@color/gray_40"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:overScrollMode="never">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/mine_publish"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/sendthe"
                    android:scaleType="centerCrop" />

                <android.support.v7.widget.CardView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:layout_marginTop="5dp"
                    android:layout_gravity="center_horizontal"
                    app:cardBackgroundColor="@color/white">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:padding="5dp"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/mine_publish_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="我的发布"
                            android:textSize="14sp"
                            android:textColor="@color/black"/>
                        <TextView
                            android:id="@+id/mine_publish_etxt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="My Release"
                            android:textSize="15sp"
                            android:textColor="@color/black"/>
                    </LinearLayout>

                </android.support.v7.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/mine_rent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scaleType="centerCrop"
                    android:src="@drawable/takeonlease"/>
                <android.support.v7.widget.CardView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:layout_marginTop="5dp"
                    android:layout_gravity="center_horizontal"
                    app:cardBackgroundColor="@color/white">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center_horizontal"
                        android:padding="5dp"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/mine_rent_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="我的租赁"
                            android:textSize="14sp"
                            android:textColor="@color/black"/>
                        <TextView
                            android:id="@+id/mine_rent_etxt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="My Lease"
                            android:textSize="15sp"
                            android:textColor="@color/black"/>
                    </LinearLayout>

                </android.support.v7.widget.CardView>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>




</LinearLayout>
